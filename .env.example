# Application
APP_NAME=Impulator
APP_VERSION=2.0.0
DEBUG=false

# Server
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=7860

# Database
DATABASE_URL=sqlite:///./data/impulator.db

# Executor (ThreadPoolExecutor for background jobs)
MAX_WORKERS=2
JOB_TIMEOUT=3600

# Cache (in-memory LRU per function)
CACHE_SIZE=2000

# Azure Blob Storage (single source of truth)
AZURE_CONNECTION_STRING=
AZURE_CONTAINER=impulator

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:7860,http://localhost:8501
